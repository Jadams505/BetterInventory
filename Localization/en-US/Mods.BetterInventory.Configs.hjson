Crafting: {
	DisplayName: Crafting

	tweeks: {
		Label: "[i:509] Tweeks"
		Tooltip:
			'''
			Fix recipe list scroll buttons and material wrapping
			Allows crafting when holding another item
			'''
	}

	recipeFiltering: {
		Label: "[i: 38] Recipe Filtering"
		Tooltip:
			'''
			Adds recipes filters
			Left Click to select a single filter
			Right Click to select multiple filters
			'''
	}

	craftOverrides: {
		Label: "[i:36] Recipe Crafting Overrides"
		Tooltip:
			'''
			Makes crafting consistent with inventory movements
			Left Click to craft a stack of items
			Shift Left Click to craft and tranfer a stack of items inside your inventory
			Right Click to craft the recipe once
			'''
	}

	craftingOnRecList: {
		Label: "[i:3617] Craft on Recipe List"
		Tooltip: Allows you to craft items directly from the recipe list
	}

	recipeScroll: {
		Label: "[i:3285] Faster Recipe Scroll"
		Tooltip: ""
	}

	focusRecipe: {
		Label: "[i:1248] Focus Hovered Recipe"
		Tooltip: Automaticaly selects the hovered recipe on the recipe list
	}
}

